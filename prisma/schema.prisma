generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?
  name      String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id             Int           @id @default(autoincrement())
  name           String
  slug           String        @unique
  description    String?
  price          Int
  salePrice      Int?
  stock          Int           @default(0)
  images         String[]      @default([])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  excerpt        String        @default("")
  keyBenefits    String[]      @default([])
  howToUse       String[]      @default([])
  keyIngredients String[]      @default([])
  suitableFor    String[]      @default([])
  status         ProductStatus @default(IN_STOCK)
  orderItems     OrderItem[]
}

model Order {
  id                      Int           @id @default(autoincrement())
  orderNumber             String        @unique @default(uuid())
  userId                  Int?
  email                   String?
  name                    String?
  phone                   String?
  shippingAddress         String
  note                    String?
  paymentSlipUrl          String?
  subtotal                Int
  discount                Int
  shipping                Int
  total                   Int
  status                  OrderStatus   @default(PENDING_CONFIRMATION)
  placementTokenHash      String?
  placementTokenExpiresAt DateTime?
  placedAt                DateTime?
  verifiedAt              DateTime?
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
  paymentMethod           PaymentMethod @default(COD)
  couponId                Int?          
  coupon                  Coupon?       @relation(fields: [couponId], references: [id])
  user                    User?         @relation(fields: [userId], references: [id])
  items                   OrderItem[]
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId Int?
  name      String
  price     Int
  quantity  Int
  order     Order    @relation(fields: [orderId], references: [id])
  product   Product? @relation(fields: [productId], references: [id], onDelete: NoAction)
}

model Coupon {
  id                Int       @id @default(autoincrement())
  code              String    @unique
  discountAmount    Int       // flat or percent
  isPercentage      Boolean   @default(false)
  active            Boolean   @default(true)
  usageLimit        Int?
  usedCount         Int       @default(0)
  validFrom         DateTime?
  validUntil        DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  orders            Order[]
}

model SiteSetting {
  id                    Int      @id @default(1)
  freeShippingThreshold Int      @default(3000)
  qrImageUrl            String?
  updatedAt             DateTime @updatedAt
  deliveryCost          Int?     @default(0)
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  name      String
  title     String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Value {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CompanyInfo {
  id              Int      @id @default(autoincrement())
  companyLocation String?
  updatedAt       DateTime
  createdAt       DateTime @default(now())
  companyEmails   String[]
  companyPhones   String[]
}

model Contact {
  id        Int           @id @default(autoincrement())
  name      String
  phone     String?
  email     String
  subject   String
  message   String
  status    ContactStatus @default(UNREAD)
  createdAt DateTime      @default(now())
  updatedAt DateTime
}

model Marquee {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model PopupContent {
  id           Int            @id @default(autoincrement())
  title        String
  description  String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  PopupDetails PopupDetails[]
}

model PopupDetails {
  id             Int          @id @default(autoincrement())
  name           String
  image          String
  popupContentId Int
  PopupContent   PopupContent @relation(fields: [popupContentId], references: [id])
}

enum ProductStatus {
  IN_STOCK
  OUT_OF_STOCK
  DISCONTINUED
  COMING_SOON
}

enum OrderStatus {
  PENDING_CONFIRMATION
  PENDING_VERIFICATION
  VERIFIED
  REJECTED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ContactStatus {
  UNREAD
  READ
  REPLIED
  ARCHIVED
}

enum PaymentMethod {
  COD
  ONLINE
}
